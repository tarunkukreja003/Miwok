<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/list_item_height"
    android:background="@color/phrases_layout"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/default_text_view_phrase"
        tools:text="Where are you going?"
        android:textColor="@color/phrases_text"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_weight="1"
        android:gravity="bottom"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/miwok_text_view_phrase"
        android:textColor="@color/phrases_text"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_weight="1"
        android:gravity="top"
        tools:text="minto wuksus"/>
</LinearLayout>

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_play_circle_outline_black_24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>