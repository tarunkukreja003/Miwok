<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/list_item_height"
    android:background="@color/numbers_layout">

    <ImageView
        android:layout_width="@dimen/list_item_height"
        android:layout_height="@dimen/list_item_height"
        android:src="@drawable/number_one"
        android:id="@+id/image_number"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:layout_toRightOf="@+id/image_number"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:background="@color/numbers_child_layout">

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/default_text_view"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/numbers_text"
        android:textStyle="bold"
        android:gravity="bottom"
        android:layout_weight="1"
        tools:text="one"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/miwok_text_view"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/numbers_text"
        android:layout_weight="1"
        android:gravity="top"
        tools:text="lutti"/>

</LinearLayout>

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_play_circle_outline_black_24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"/>

</RelativeLayout>